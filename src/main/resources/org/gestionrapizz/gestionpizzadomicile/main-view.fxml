         <children>
            <Button fx:id="login_button" layoutX="278.0" layoutY="299.0" mnemonicParsing="false" onMouseClicked="#onLoginButtonClick" prefHeight="30.0" prefWidth="120.0" style="-fx-background-color: #1E9F00;" text="Login" textFill="WHITE">
